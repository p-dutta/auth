        "summary": "Create Token",
        "description": "Endpoint to get tokens.",
        "operationId": "getTokens",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "Type of the token request."
                  },
                  "requester_id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "ID of the requester (UUID v4)."
                  },
                  "device_id": {
                    "type": "string",
                    "description": "ID of the device."
                  },
                  "at_duration": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Expiry time for the access token in seconds."
                  },
                  "rt_duration": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Expiry time for the refresh token in seconds."
                  }
                },
                "required": [
                  "type",
                  "requester_id",
                  "device_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token granted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
